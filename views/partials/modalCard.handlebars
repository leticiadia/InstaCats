<div
  class="modal fade"
  id="modalCard"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
  onfocus="loadCat()"
>
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-body img-container">
          <img id="selectedCat" alt="Gato selecionado" />
      </div>
      <form method="post" id="interactionForm">
        <div class="barra-interacao">
          <button type="button" class="btn btn-outline-danger">❤</button>
          <input
            type="text"
            name="comment"
            class="input-comentario"
            placeholder="Escreva um comentário..."
          />
          <button type="submit">Enviar</button>
        </div>
      </form>
      </div>
    </div>
  </div>
</div>

<script>
  function loadCat() {
    const cat = document.querySelector("#selectedCat");
    cat.src = `/assets/img/${this.cat.image}`;
  }
</script>